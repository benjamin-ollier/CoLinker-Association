{
  "version": "0.2.0",
  "configurations": [
    {
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "name": "nodemon",
      "program": "${workspaceFolder}/backend/src/index.ts",
      "request": "launch",
      "restart": true,
      "env": {
        "SECRET_KEY": "totosecretkey",
        "DB_USER": "monUtilisateur",
        "DB_PASS": "monMotDePasse",
        "DB_NAME": "maBaseDeDonnees",
        "DB_HOST": "localhost",
        "DB_PORT": "27017",
        "BackendPORT": "8000"
      },
      "runtimeExecutable": "nodemon",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Node backend",
      "runtimeExecutable": "ts-node",
      "args": ["${workspaceFolder}/backend/src/index.ts"],
      "env": {
        "SECRET_KEY": "totosecretkey",
        "DB_USER": "monUtilisateur",
        "DB_PASS": "monMotDePasse",
        "DB_NAME": "maBaseDeDonnees",
        "DB_HOST": "localhost",
        "DB_PORT": "27017",
        "BackendPORT": "8000"
      },
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/backend/dist/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node-terminal",
      "name": "Exécuter le script : start",
      "request": "launch",
      "command": "npm run start",
      "cwd": "${workspaceFolder}/colinker"
    }
  ]
}